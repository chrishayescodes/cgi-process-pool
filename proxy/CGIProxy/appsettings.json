{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "search-route": {
        "ClusterId": "search-cluster",
        "Match": {
          "Path": "/api/search/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/search" }
        ],
        "Metadata": {
          "Service": "search"
        }
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api/auth" }
        ],
        "Metadata": {
          "Service": "auth"
        }
      },
      "admin-route": {
        "ClusterId": "admin-cluster",
        "Match": {
          "Path": "/admin/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/admin" }
        ]
      },
      "admin-api-route": {
        "ClusterId": "admin-cluster",
        "Match": {
          "Path": "/admin-api/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/admin-api" },
          { "PathPrefix": "/api" }
        ]
      },
      "root-route": {
        "ClusterId": "admin-cluster",
        "Match": {
          "Path": "/"
        }
      }
    },
    "Clusters": {
      "search-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/?q=health"
          }
        },
        "Destinations": {
          "search-1": {
            "Address": "http://127.0.0.1:8000/"
          },
          "search-2": {
            "Address": "http://127.0.0.1:8001/"
          }
        }
      },
      "auth-cluster": {
        "LoadBalancingPolicy": "RoundRobin",
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/?user=health"
          }
        },
        "Destinations": {
          "auth-1": {
            "Address": "http://127.0.0.1:8002/"
          }
        }
      },
      "admin-cluster": {
        "Destinations": {
          "admin-1": {
            "Address": "http://127.0.0.1:5000/"
          }
        }
      }
    }
  }
}
